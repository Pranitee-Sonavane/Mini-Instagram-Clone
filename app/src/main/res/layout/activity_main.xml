<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <!-- Customize your toolbar here -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/rochester"
                android:text="Instagram"
                android:textColor="@android:color/black"
                android:textSize="29sp"
                android:textStyle="bold" />


        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nested Scroll View for Posts -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <!--post1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <!-- Post Image (Placeholder) -->
                <ImageView
                    android:id="@+id/postImage1"
                    android:layout_width="wrap_content"
                    android:layout_height="264dp"
                    android:background="@drawable/post1"
                    android:scaleType="centerCrop" />

                <!-- Caption -->
                <TextView
                    android:id="@+id/caption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postImage1"
                    android:layout_marginTop="8dp"
                    android:text="IPL 2024: CSK to face RCB in tournament opener on March 22; BCCI announces 21-match schedule"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Like, Comment, Share, Save buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/caption1"
                    android:layout_marginTop="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/like1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/comment1"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp" />


                    <ImageView
                        android:id="@+id/share1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/share" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/save1"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/save" />

                </LinearLayout>
            </RelativeLayout>

            <!-- Post 2 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Post Image (Placeholder) -->
                <ImageView
                    android:id="@+id/postImage2"
                    android:layout_width="wrap_content"
                    android:layout_height="264dp"
                    android:background="@drawable/post2"
                    android:scaleType="centerCrop" />

                <!-- Caption -->
                <TextView
                    android:id="@+id/caption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postImage2"
                    android:layout_marginTop="8dp"
                    android:text="Rendering the Human Face with Different Mediums"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Like, Comment, Share, Save buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/caption2"
                    android:layout_marginTop="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/like2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/comment2"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp" />

                    <ImageView
                        android:id="@+id/share2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/share" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/save2"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/save" />


                </LinearLayout>

            </RelativeLayout>

            <!--post3 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Post Image (Placeholder) -->
                <ImageView
                    android:id="@+id/postImage3"
                    android:layout_width="wrap_content"
                    android:layout_height="264dp"
                    android:background="@drawable/post3"
                    android:scaleType="centerCrop" />

                <!-- Caption -->
                <TextView
                    android:id="@+id/caption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postImage3"
                    android:layout_marginTop="8dp"
                    android:text="Smriti Mandhana overwhelmed, can't hear question as Chinnaswamy goes wild in RCB vs UPW WPL Match."
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />

                <!-- Like, Comment, Share, Save buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/caption3"
                    android:layout_marginTop="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/like3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/comment3"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp" />

                    <ImageView
                        android:id="@+id/share3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/share" />


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/save3"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/save" />


                </LinearLayout>

            </RelativeLayout>

            <!--post4-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <!-- Post Image (Placeholder) -->
                <ImageView
                    android:id="@+id/postImage4"
                    android:layout_width="wrap_content"
                    android:layout_height="264dp"
                    android:background="@drawable/post4"
                    android:scaleType="centerCrop" />
                <!-- Caption -->
                <TextView
                    android:id="@+id/caption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/postImage4"
                    android:layout_marginTop="8dp"
                    android:text="Ayodhya Ram Mandir ropes in SBI's counting machines as it receives ₹25 crore donations in a month
"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
                <!-- Like, Comment, Share, Save buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/caption4"
                    android:layout_marginTop="8dp"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/like4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/like" />

                    <ImageView
                        android:id="@+id/comment4"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="8dp" />

                    <ImageView
                        android:id="@+id/share4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/share" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/save4"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/save" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>


